/* pages/chart/chart.wxss */
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-size: 100% 100%;
  z-index: -1;
}
.content {
  padding: 62rpx 0;
}
.chart {
  width: 90%;
  height: 412rpx;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  margin-bottom: 48rpx;
}
.chart .background {
  position: absolute;
  width: 100%;
  height: 412rpx;
  z-index: -1;
  background-size: 100% 100%;
}

.chart .title {
  text-align: center;
  font-size: 24rpx;
  line-height: 60rpx;
  letter-spacing: 4px;
  text-shadow: 0px 0px 4px rgba(68, 192, 248, 0.5);
  font-weight: 600;
  color: rgba(75, 198, 232, 0.99);
}
.chart .graph {
  position: absolute;
  top: -10px;
  right: 0;
  left: 0;
  bottom: -90rpx;
  box-sizing: border-box;
  padding: 0 0 36rpx 36rpx;
}
.chart .canvas {
  height: 100%;
  width: 100%;
}
